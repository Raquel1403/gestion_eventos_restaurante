<odoo>
    <data noupdate="1">
        <record id="confirmacion_reserva_email_template" model="mail.template">
            <field name="name">Confirmación de Reserva</field>
            <field name="model_id" ref="model_restaurante_reserva"/>
            <field name="email_from">${(object.company_id.email or 'info@tudominio.com')|safe}</field>
            <field name="subject">Confirmación de Reserva para ${object.cliente_id.name}</field>
            <field name="email_to">${object.email}</field>
            <field name="body_html">
                <![CDATA[
                <p>Hola ${object.cliente_id.name},</p>
                <p>Tu reserva para el día ${object.fecha_reserva} ha sido confirmada.</p>
                <p>¡Te esperamos!</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>
